<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_dialog_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog Alert"
        app:layout_constraintBottom_toTopOf="@+id/bt_dialog_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_dialog_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog Progress"
        app:layout_constraintBottom_toTopOf="@+id/bt_dialog_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_dialog_alert" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_dialog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog Time"
        app:layout_constraintBottom_toTopOf="@+id/bt_dialog_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_dialog_progress" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_dialog_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog Day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_dialog_time" />

</androidx.constraintlayout.widget.ConstraintLayout>
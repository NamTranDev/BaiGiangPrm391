<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_bg"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ivCircleBlank"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle_blank"
        tools:ignore="contentDescription"/>

    <ImageView
        android:id="@+id/ivTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCircleBlank"
        app:srcCompat="@drawable/ic_bg_title"
        tools:ignore="contentDescription" />

    <ImageView
        android:id="@+id/ivBoCap"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:clickable="true"
        android:src="@drawable/ic_bocap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivCircleBlank"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivThienBinh"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/ivMaKet"
        app:layout_constraintTop_toTopOf="@id/ivBoCap"
        app:srcCompat="@drawable/ic_thien_binh"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivSongNgu"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/ivMaKet"
        app:layout_constraintTop_toTopOf="@id/ivThienBinh"
        app:srcCompat="@drawable/ic_song_ngu"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivMaKet"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/ivCircleBlank"
        app:layout_constraintEnd_toEndOf="@id/ivCircleBlank"
        app:layout_constraintTop_toTopOf="@id/ivCircleBlank"
        app:layout_constraintVertical_bias="0.504"
        app:srcCompat="@drawable/ic_ma_ket"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivBaoBinh"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="55dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/ivXuNu"
        app:layout_constraintEnd_toEndOf="@id/ivMaKet"
        app:srcCompat="@drawable/ic_bao_binh"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivCuGiai"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        app:flow_horizontalBias="0.5"
        app:layout_constraintBottom_toBottomOf="@id/ivXuNu"
        app:layout_constraintEnd_toEndOf="@id/ivBaoBinh"
        app:srcCompat="@drawable/ic_cu_giai"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivXuNu"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="125dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBoCap"
        app:srcCompat="@drawable/ic_xu_nu"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivBachDuong"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/ivKimNguu"
        app:layout_constraintTop_toTopOf="@id/ivBoCap"
        app:srcCompat="@drawable/ic_bach_duong"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivSongTu"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/ivKimNguu"
        app:layout_constraintTop_toTopOf="@id/ivBachDuong"
        app:srcCompat="@drawable/ic_song_tu"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivKimNguu"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/ivCircleBlank"
        app:layout_constraintStart_toStartOf="@id/ivCircleBlank"
        app:layout_constraintTop_toTopOf="@id/ivCircleBlank"
        app:layout_constraintVertical_bias="0.504"
        app:srcCompat="@drawable/ic_kim_nguu"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivSutu"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="57dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/ivXuNu"
        app:layout_constraintStart_toStartOf="@id/ivKimNguu"
        app:srcCompat="@drawable/ic_su_tu"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/ivNhanMa"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/ivXuNu"
        app:layout_constraintStart_toStartOf="@id/ivSutu"
        app:srcCompat="@drawable/ic_nhan_ma"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_constraintBottom_toBottomOf="@id/ivXuNu" />

    <LinearLayout
        android:id="@+id/vgAbstract"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/abstract_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTittle">

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/bo_cap_title2"
            android:textColor="@color/colorYellow"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvAbstracts"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:text="@string/bo_cap_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnXemThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:minWidth="150dp"
            android:text="Xem ThÃªm"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black" />


    </LinearLayout>

    <ImageView
        android:id="@+id/ivTitle2"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toBottomOf="@id/vgAbstract"
        app:layout_constraintStart_toStartOf="@id/vgAbstract"
        app:srcCompat="@drawable/ic_bocap" />


</androidx.constraintlayout.widget.ConstraintLayout>
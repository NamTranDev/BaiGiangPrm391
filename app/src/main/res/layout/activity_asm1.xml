<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".asm1.Asm1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white"
        android:background="@color/orange_500" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_image_height"
        app:srcCompat="@drawable/ic_title_animal"/>

    <!-- chia bo cuc cho dong deu cac image ic con-->
    <GridView
        android:id="@+id/gridViewAnimal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_grid_view_height"
        android:background="@color/white"
        android:horizontalSpacing="@dimen/main_horizontal_spacing"
        android:numColumns="3"
        android:verticalSpacing="@dimen/main_vertical_spacing"
        android:layout_marginLeft="@dimen/main_margin_left"
        />
</LinearLayout>
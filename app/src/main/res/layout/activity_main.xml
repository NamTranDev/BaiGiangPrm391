<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_normal_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal Permission Example"
        app:layout_constraintBottom_toTopOf="@+id/bt_runtime_permission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_runtime_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Runtime Permission Example"
        app:layout_constraintBottom_toTopOf="@+id/bt_lab_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_normal_permission" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_lab_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lab 6 Music Player"
        app:layout_constraintBottom_toTopOf="@+id/bt_video_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_runtime_permission" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_video_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VideoView"
        app:layout_constraintBottom_toTopOf="@+id/bt_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_lab_6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Example"
        app:layout_constraintBottom_toTopOf="@+id/bt_sms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_video_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sms Example"
        app:layout_constraintBottom_toTopOf="@+id/bt_exercise_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_service" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_exercise_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_sms" />

</androidx.constraintlayout.widget.ConstraintLayout>
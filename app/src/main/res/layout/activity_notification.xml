<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification.NotificationActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_notification_not_allow_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Example Not Allow Click"
        app:layout_constraintBottom_toTopOf="@+id/bt_notification_allow_click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_notification_allow_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Example Allow Click"
        app:layout_constraintBottom_toTopOf="@+id/bt_notification_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_notification_not_allow_click" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_notification_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_notification_allow_click" />

</androidx.constraintlayout.widget.ConstraintLayout>